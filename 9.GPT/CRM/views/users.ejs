<%- include('partials/header') %>

<div class="container mt-4">

    <h3 class="mb-3">ðŸ‘¤ Users</h3>

    <!-- ê²€ìƒ‰ ì˜ì—­ -->
    <form class="row g-2 mb-3" method="GET" action="/users">
        <div class="col-md-4">
            <input
                type="text"
                name="name"
                class="form-control"
                placeholder="Search Name"
                value="<%= searchName %>">
        </div>

        <div class="col-md-3">
            <select name="gender" class="form-select">
                <option value="">All Gender</option>
                <option value="Male" <%= gender === 'Male' ? 'selected' : '' %>>Male</option>
                <option value="Female" <%= gender === 'Female' ? 'selected' : '' %>>Female</option>
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100">Search</button>
        </div>
    </form>

    <!-- í…Œì´ë¸” -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="5" class="text-center py-3">
                                No users found
                            </td>
                        </tr>
                    <% } %>

                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.Id %></td>
                            <td><%= user.Name %></td>
                            <td><%= user.Gender %></td>
                            <td><%= user.Age %></td>
                            <td><%= user.Email %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- íŽ˜ì´ì§€ë„¤ì´ì…˜ -->
    <nav class="mt-3">
        <ul class="pagination justify-content-center">

            <!-- ì´ì „ ê·¸ë£¹ -->
            <% if (startPage > 1) { %>
                <li class="page-item">
                    <a class="page-link"
                       href="/users?page=<%= startPage - 1 %>&name=<%= searchName %>&gender=<%= gender %>">
                        &laquo;
                    </a>
                </li>
            <% } %>

            <!-- ì•ž ... -->
            <% if (startPage > 1) { %>
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            <% } %>

            <!-- íŽ˜ì´ì§€ ë²ˆí˜¸ -->
            <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link"
                       href="/users?page=<%= i %>&name=<%= searchName %>&gender=<%= gender %>">
                        <%= i %>
                    </a>
                </li>
            <% } %>

            <!-- ë’¤ ... -->
            <% if (endPage < totalPages) { %>
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            <% } %>

            <!-- ë‹¤ìŒ ê·¸ë£¹ -->
            <% if (endPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link"
                       href="/users?page=<%= endPage + 1 %>&name=<%= searchName %>&gender=<%= gender %>">
                        &raquo;
                    </a>
                </li>
            <% } %>

        </ul>
    </nav>

</div>

<%- include('partials/footer') %>
